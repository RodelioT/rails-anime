<p id="notice"><%= notice %></p>

<h1>Animes</h1>

<table>
  <thead>
    <tr>
      <th>Mal</th>
      <th>Name</th>
      <th>Episode count</th>
      <th>Rating</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.mal_id %></td>
        <td><%= anime.name %></td>
        <td><%= anime.episode_count %></td>
        <td><%= anime.rating %></td>
        <td><%= anime.image_url %></td>
        <td><%= link_to 'Show', anime %></td>
        <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
        <td><%= link_to 'Destroy', anime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @animes %>

<br>

<%= link_to 'New Anime', new_anime_path %>
