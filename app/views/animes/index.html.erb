<p id="notice"><%= notice %></p>

<h1>Animes</h1>


<%= form_tag(search_path, method: "get") do %>
  <%= label_tag(:q, "Search anime for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Episode count</th>
      <th>Rating</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.name %></td>
        <td><%= anime.episode_count %></td>
        <td><%= anime.rating %></td>
        <td><%= image_tag anime.image_url, height:100 %></td>
        <td><%= link_to 'Show', anime %></td>
        <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
        <td><%= link_to 'Destroy', anime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @animes %>

<br>

<%= link_to 'New Anime', new_anime_path %>
